# Database
## Neon (production) — use pooled for runtime
# Example: postgresql://user:password@<neon-host>.neon.tech/neondb?sslmode=require&pgbouncer=true&connection_limit=1&connect_timeout=15
DATABASE_URL="postgresql://user:password@<neon-host>.neon.tech/<database>?sslmode=require&pgbouncer=true&connection_limit=1&connect_timeout=15"

## Neon (migrations) — direct, non-pooled connection
# Example: postgresql://user:password@<neon-host>.neon.tech/neondb?sslmode=require&connect_timeout=15
DIRECT_URL="postgresql://user:password@<neon-host>.neon.tech/<database>?sslmode=require&connect_timeout=15"

# Auth
JWT_SECRET="your-jwt-secret-key-here"
JWT_EXPIRATION="7d"
EMAIL_VERIFICATION_EXPIRATION_HOURS=48

# Server
PORT=3001

# CORS - allowed frontend origins (comma-separated)
FRONTEND_ORIGINS="http://localhost:3000,http://localhost:3002,http://127.0.0.1:3000,http://127.0.0.1:3002,https://your-site.netlify.app"

# Rate limiting (optional)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=300

# Email (SMTP)
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT=587
EMAIL_USER="your_smtp_username"
EMAIL_PASSWORD="your_smtp_password"
EMAIL_FROM="noreply@invoicy.com"
EMAIL_SECURE=false
EMAIL_CONNECTION_TIMEOUT_MS=10000
EMAIL_GREETING_TIMEOUT_MS=10000
EMAIL_SOCKET_TIMEOUT_MS=20000

# Email Provider (global)
# Options: SMTP | SENDGRID | BREVO
EMAIL_PROVIDER=SMTP

# SendGrid (only required when EMAIL_PROVIDER=SENDGRID)
SENDGRID_API_KEY="your-sendgrid-key"

# Brevo/Sendinblue (when using Brevo SMTP)
# If EMAIL_HOST points to Brevo (e.g., smtp-relay.brevo.com), the app will automatically
# use username 'apikey' and this BREVO_API_KEY as the SMTP password. EMAIL_USER/PASSWORD
# can be left empty in that case.
BREVO_API_KEY="your-brevo-api-key"

# Tracking (applies to providers that support it, e.g., SendGrid)
EMAIL_TRACK_OPENS=true
EMAIL_TRACK_CLICKS=true

# Storage (optional)
AWS_ACCESS_KEY_ID="your-aws-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret"
AWS_BUCKET_NAME="invoicy-uploads"

# Admin
ADMIN_EMAIL="admin@invoicy.com"
ADMIN_PASSWORD="secure-admin-password"

# App
APP_NAME="Invoicy"
APP_URL="http://localhost:3000"
